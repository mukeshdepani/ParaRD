<Window x:Class="FastDB.GridHeaderColumn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridHeaderColumn" Height="300" Width="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>


            <DockPanel HorizontalAlignment="Right" Margin="0,0,0,0" DockPanel.Dock="Top" Height="25" VerticalAlignment="Top">
                <StackPanel Name="StackPanelTopControl1" DockPanel.Dock="Top" Height="94" Width="200" HorizontalAlignment="Center">
                    <StackPanel Name="StackPanelTopControl" DockPanel.Dock="Top" HorizontalAlignment="Center">
                        <DockPanel Name ="DockFromTabTopControl" Margin="0,0" HorizontalAlignment="Right">
                            <Label Name="lblColumnName" Width="auto" FontSize="14" Margin="5,0" HorizontalAlignment="Left" FontWeight="Bold" Height="20" VerticalAlignment="Bottom" Visibility="Visible"></Label>
                        </DockPanel>

                    </StackPanel>
                </StackPanel>
            </DockPanel>
            <DockPanel>
                <StackPanel Orientation="Vertical" >

                    <DataGrid Name="ColumnDataGrid" FontFamily="Calibri" ItemsSource="{Binding}" FontSize="13" FontWeight="Bold" ColumnWidth="200"
            AutoGenerateColumns="True" IsReadOnly="True" Visibility="Visible"
                             ScrollViewer.CanContentScroll="False"
                              ScrollViewer.VerticalScrollBarVisibility="Auto" 
      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    </DataGrid>

                </StackPanel>
            </DockPanel>

        </Grid>
    </ScrollViewer>
</Window>
