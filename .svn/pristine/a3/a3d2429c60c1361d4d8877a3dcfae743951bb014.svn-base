<UserControl x:Class="FastDB.Control.ShortCutsBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tk="http://schemas.microsoft.com/wpf/2008/toolkit" 
             xmlns:local="clr-namespace:FastDB.Class"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="700">
    <Grid>
        <ToolBarTray>            
            <ToolBar Band="1" BandIndex="1">
                <Button>                    
                    <Image Source="/Images/playicon.png" />
                </Button>
                <Button>
                    <Image Source="/Images/stopicon.png" />
                </Button>
                <Button>
                    <Image Source="/Images/saveicon.png" />
                </Button>
                <Button>
                    <Image Source="/Images/saveasicon.png" />
                </Button>
            </ToolBar>            
        </ToolBarTray>
    </Grid>
</UserControl>
